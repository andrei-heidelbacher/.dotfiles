#!/usr/bin/env bash

# Converts the given latex file to pdf, including the bibliography (the `.tex`
# extension must be ommited).

[ "$#" -ne 1 ] && \
    echo "Usage: $0 base-filename" && exit 1

[[ "$1" = *.tex ]] && \
    echo "File name must not contain the '.tex' extension!" && exit 1

filename="$1"
pdflatex "$filename" && \
    bibtex "$filename" && \
    pdflatex "$filename" && \
    pdflatex "$filename"
