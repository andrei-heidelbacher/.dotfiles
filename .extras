#!/usr/bin/env bash

# Required packages:
# * git
# * vim
# * vim.gnome-py2
# * zenity
# * python
# * python3
# * python3-venv
# * pylint
# * pylint3
# * openjdk-8-jdk

# Export Java SDK. Set installation directory accordingly.
export JAVA_HOME="/usr/lib/jvm/java-8-openjdk-amd64"
export PATH="$PATH:$JAVA_HOME/bin"

# Export Android SDK. Set installation directory accordingly.
export ANDROID_HOME="$HOME/sdk/android-sdk-linux"
export PATH="$PATH:$ANDROID_HOME/tools"
export PATH="$PATH:$ANDROID_HOME/platform-tools"

# Export Scala SDK. Set installation directory accordingly.
export SCALA_HOME="$HOME/sdk/scala-2.11.8"
export PATH="$PATH:$SCALA_HOME/bin"
